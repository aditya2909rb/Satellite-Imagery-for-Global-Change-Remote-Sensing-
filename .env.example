# Environment Configuration Template
# Copy this file to .env and fill in your values

# NASA FIRMS API Configuration
# Get your API key from: https://firms.modaps.eosdis.nasa.gov/api/
NASA_FIRMS_API_KEY=your_nasa_firms_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Email Alert Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_RECIPIENTS=recipient1@email.com,recipient2@email.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_ENABLED=True
CACHE_DIR=.image_cache
CACHE_MAX_SIZE_MB=1000

# Data Export Configuration
EXPORT_DIR=static/exports
MAP_DIR=static/maps

# Detection Thresholds
FIRE_CONFIDENCE_THRESHOLD=0.7
DETECTION_RADIUS_KM=100

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT=30
